<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/calc_background"
    tools:context=".CalcActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/calc_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/calc_result_text"
                android:text="@string/calc_tv_title"/>
            <TextView
                android:id="@+id/calc_tv_expression"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/calc_expression_text"
                android:textSize="18sp"
                tools:text="99 x 6 ="/>
        </LinearLayout>
        <TextView
            android:id="@+id/calc_tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/calc_result_text"
            android:textSize="52sp"
            android:textStyle="bold"
            tools:text="594"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/calc_percent"
                android:text="@string/calc_tv_percent"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_btn_7"
                android:text="@string/calc_btn_7"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_8"
                android:text="@string/calc_btn_8"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_9"
                android:text="@string/calc_btn_9"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_multiplication"
                android:text="@string/calc_tv_multiplication"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_backspace"
                android:text="@string/calc_tv_backspace"
                style="@style/calc_btn_func"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/calc_inverse"
                android:text="@string/calc_tv_inverse"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_btn_4"
                android:text="@string/calc_btn_4"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_5"
                android:text="@string/calc_btn_5"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_6"
                android:text="@string/calc_btn_6"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_minus"
                android:text="@string/calc_tv_minus"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_ce"
                android:text="@string/calc_tv_ce"
                android:background="@drawable/calc_btn_func"
                style="@style/calc_btn_func"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/calc_square"
                android:text="@string/calc_tv_square"
                android:background="@drawable/calc_btn_func"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_btn_1"
                android:text="@string/calc_btn_1"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_2"
                android:text="@string/calc_btn_2"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_3"
                android:text="@string/calc_btn_3"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_plus"
                android:text="@string/calc_tv_plus"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_c"
                android:text="@string/calc_tv_c"
                style="@style/calc_btn_func"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/calc_sqrt"
                android:text="@string/calc_tv_sqrt"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_plus_minus"
                android:text="@string/calc_tv_plus_minus"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_btn_0"
                android:text="@string/calc_btn_0"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_comma"
                android:text="@string/calc_tv_comma"
                style="@style/calc_btn_digits"
                />
            <Button
                android:id="@+id/calc_divide"
                android:text="@string/calc_tv_divide"
                style="@style/calc_btn_func"
                />
            <Button
                android:id="@+id/calc_equel"
                android:text="@string/calc_tv_equel"
                style="@style/calc_btn_equals"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>